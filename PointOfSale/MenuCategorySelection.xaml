<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MenuCategorySelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="SelectCombo" Grid.Row="0" Grid.Column="0" FontSize="50">Combos</Button>
        <Button Click="SelectEntree" Grid.Row="0" Grid.Column="1" FontSize="50">Entrees</Button>
        <Button Click="SelectDrink" Grid.Row="1" Grid.Column="0" FontSize="50">Drinks</Button>
        <Button Click="SelectSide" Grid.Row="1" Grid.Column="1" FontSize="50">Sides</Button>

    </Grid>
</Page>
