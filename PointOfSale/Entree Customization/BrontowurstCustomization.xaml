<Page x:Class="PointOfSale.Entree_Customization.BrontowurstCustomization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale.Entree_Customization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrontosaurusCustomization">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Click="OnHoldBun" FontSize="30">Hold Bun</Button>
        <Button Grid.Row="0" Grid.Column="1" Click="OnHoldOnions" FontSize="30">Hold Onions</Button>
        <Button Grid.Row="0" Grid.Column="2" Click="OnHoldPeppers" FontSize="30">Hold Peppers</Button>
        <Button Grid.Row="2" Grid.Column="2" Click="OnConfirm" FontSize="30">Confirm</Button>
    </Grid>
</Page>
